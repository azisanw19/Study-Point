<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/kerjakan_separator_pilih_nomor"
    android:layout_below="@id/kerjakan_waktu_tersisa"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/soal_kerjakan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Anime terbagus adalah ..." />

        <ImageView
            android:id="@+id/image_soal_kerjakan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/study_point" />

        <RadioGroup
            android:id="@+id/kerjakan_pilih_jawaban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/pilihanA_kerjakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="A" />

            <RadioButton
                android:id="@+id/pilihanB_kerjakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="B" />

            <RadioButton
                android:id="@+id/pilihanC_kerjakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="C" />

            <RadioButton
                android:id="@+id/pilihanD_kerjakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="D" />

            <RadioButton
                android:id="@+id/pilihanE_kerjakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="E" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/tandai_soal_kerjakan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tandai soal"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </LinearLayout>

</ScrollView>